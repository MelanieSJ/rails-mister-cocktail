  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Cocktails</h3>
    <ul style = "list-style: none">
    <% @cocktails.each do |cocktail| %>
    <li>
     <i class="fas fa-glass-martini"></i>
