<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
       <h2>Create a new Cocktail</h2>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :ingredients %>
        <%= f.input :doses %>
        <%= f.submit class: 'btn btn-primary' %>
            <%= link_to "back to list" , cocktails_path, class: "btn btn-primary"%>
      <% end %>

    </div>

  </div>
</div>



