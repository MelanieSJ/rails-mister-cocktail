<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">
      <h1>Add Ingredients</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>

        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>


